{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "D:/Msys2/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "Shader.cpp",
                "Camera.cpp",
                "stb_image.cpp",
                "D:/JuuCraft/include/src/glad.c",
                "-I",
                "D:/JuuCraft/include",
                "-I",
                "D:/JuuCraft/include/glm-0.9.9.8",
                "-o",
                "${workspaceFolder}/build/MinecraftClone.exe",
                "-lglfw3",
                "-lgdi32",
                "-lopengl32"
            ],
            "options": {
                "env": {
                    "CPLUS_INCLUDE_PATH": "D:/vcpkg/installed/x64-mingw-static/include",
                    "LIBRARY_PATH": "D:/vcpkg/installed/x64-mingw-static/lib"
                }
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}