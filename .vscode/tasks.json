{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "D:/Msys2/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "D:/JuuCraft/src/Shader.cpp",
                "D:/JuuCraft/src/Camera.cpp",
                "main.cpp",
                "D:/JuuCraft/src/TextureManager.cpp",
                "D:/JuuCraft/src/WindowManager.cpp",
                "D:/JuuCraft/src/Mesh.cpp",
                "D:/JuuCraft/src/Chunk.cpp",
                "D:/JuuCraft/src/stb_image.cpp",
                "D:/JuuCraft/include/src/glad.c",
                "D:/JuuCraft/src/InputManager.cpp",
                "-I",
                "D:/JuuCraft/include",
                "-I",
                "D:/JuuCraft/utils",
                "-I",
                "D:/JuuCraft/include/glm-0.9.9.8",
                "-o",
                "${workspaceFolder}/build/MinecraftClone.exe",
                "-lglfw3",
                "-lgdi32",
                "-lopengl32"
